%% __sty -*- mode: LaTeX -*-

% A Simple package to providing:
% - resptitle{TitleWithFormatting}{TitleinToc}

% for easy creation of hrefs for titles


% Package ID:
\ProvidesPackage{responsive-title}
\NeedsTeXFormat{LaTeX2e}

\RequirePackage{standalone}
\RequirePackage{hyperref}
\RequirePackage{titling}
\RequirePackage{titlesec}

%%-- Commands

\DeclareRobustCommand{\resptitle}[2]{
  \IfStandalone{
    \title{#1}
    \maketitle
  }{
    \chapter[#2]{#1}
    \markboth{#1}{} % left and right page headings
    % \addcontentsline{toc}{chapter}{#2}
  }
}

