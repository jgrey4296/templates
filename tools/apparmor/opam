## opam -*- mode: conf-unix-mode -*-
# Summary: apparmor to fix opam's bwrap failures
#
# from https://github.com/ocaml/opam/issues/5968
# Tags:
#
# This profile allows everything and only exists to give the
# application a name instead of having the label "unconfined"

abi <abi/4.0>,
include <tunables/global>

# use asdf which opam
profile opam /home/john/_cache_/asdf/installs/opam/2.4.1/bin/opam flags=(unconfined) {
  userns,

  # Site-specific additions and overrides. See local/README for details.
  include if exists <local/opam>
}
