# -*- mode: snippet -*-
# name  : arg.parse
# uuid  : arg.parse
# key   : arg.parse
# group :
# --
while [[ $# -gt 0 ]]; do
    case \$1 in
        -t|--target)
            echo "Target: \$2"
            ;;
        --*=*)
            echo "Assignment: \$1"
            IFS="=" read -ra KEYVAL <<< "\$1"
            echo "Key: \${KEYVAL[0]/--/}"
            echo "Val: \${KEYVAL[1]}"
            ;;
        *) # Positional
            echo "Positional: \$1"
            ;;
    esac
    shift
done