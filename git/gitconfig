# gitconfig -*- mode: Gitconfig -*- 
# git configuration
# https://git-scm.com/docs/git-config
# symlink to XDG_CONFIG_HOME/git/config
[user]
	name	= John Grey
	email	= johngrey4296@gmail.com
	github	= jgrey4296
[push]
	default = matching
[credential]
	helper = cache
[core]
	excludesfile = ~/.config/git/gitignore_global
	autocrlf=input
	eol=lf
[init]
	defaultBranch = main
	# templateDir = ~/.config/git//initDir
[commit]
	template = ~/.config/git/commit_template
[hooks]
	allownonascii = false
[merge]
        branchdesc = true
	log = 20
[pretty]
# reminder: use 'format:', doesnt need to wrap in a string
# data access with %{char}
# see line 1199 of git-log man
# useful: [%aI - ISO 8601 date] [%as - short date] [%an - author] [%h - short hash]
# [%s - subject]
jgsimple = format:"!!! %h : %aI : %s "

[alias]
jglog = log --pretty=jgsimple --name-only
	
[github]
	user = jgrey4296
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
